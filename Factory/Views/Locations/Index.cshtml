@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Location>;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No locations exist in the system</h3>
}

@foreach (Location location in Model)
{
  <li>@Html.ActionLink($"{location.Name}", "Details", new { id = location.LocationId })</li>
}

<p>@Html.ActionLink("Add new location", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>