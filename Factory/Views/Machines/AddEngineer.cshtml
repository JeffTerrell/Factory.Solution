@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add an engineer</h2>

<h4>License an engineer to work on this machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("View all machines", "Index")</p>